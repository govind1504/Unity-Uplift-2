<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/banner1"
        android:layout_width="238dp"
        android:layout_height="385dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner1" />

    <ImageView
        android:id="@+id/banner2"
        android:layout_width="332dp"
        android:layout_height="294dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="232dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner2" />

    <TextView
        android:id="@+id/About"
        android:layout_width="301dp"
        android:layout_height="97dp"
        android:fontFamily="sans-serif-medium"
        android:text="Discover, connect and collaborate with others who share your passion on Unity Up Lift."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/About"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/SignUpbtn1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Sign Up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/About"
            />
        <Button
            android:id="@+id/SignInbtn1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sign In"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>